{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./build",
        "target": "es2020",
        "lib": ["dom", "es2020"],
        "module": "ES2020",
        "moduleResolution": "node",
        "allowJs": true,
        "downlevelIteration": true,
        "noEmitOnError": true,
        "strict": true,
        "useUnknownInCatchVariables": false
    },
    "exclude": [
        "node_modules",
        "build",
        "lib",
        "src/test/web-platform-tests",
        "auto.js",
        "jest.config.js",
        "test",
        "test.js"
    ]
}
