{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./build",
        "target": "es5",
        "lib": ["dom", "es6"],
        "module": "ES2020",
        "allowJs": true,
        "downlevelIteration": true,
        "noEmitOnError": true,
        "strict": true
    },
    "exclude": [
        "node_modules",
        "build",
        "lib",
        "src/test/web-platform-tests",
        "auto.js",
        "test",
        "test.js"
    ]
}
